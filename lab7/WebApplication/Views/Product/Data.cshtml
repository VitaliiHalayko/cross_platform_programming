@model IEnumerable<DBWebApp.Models.Product>

<h2>Products</h2>

<table class="table">
    <thead>
    <tr>
        <th>Product ID</th>
        <th>Category Code</th>
        <th>Name</th>
        <th>Details</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductCategoryCode</td>
            <td>@product.ProductName</td>
            <td>@product.OtherProductDetails</td>
            <td>
                <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>